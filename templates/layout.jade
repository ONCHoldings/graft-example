html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.title
      link(rel='stylesheet', href='/assets/css/example.css')

  body
    header.navbar.navbar-fixed-top: div.navbar-inner: div.container
      a.brand(href='/')= locals.siteName

    div#main
      section#content
        block content
          - var progress= 0;
          h1.page-header Starting
            small please wait a moment
          .progress: .bar(style="width: #{progress}%;")
      section#sidebar
        block sidebar

    script(src='/js/vendor.js')
    script(src='/js/templates.js')
    script(src='/js/models.js')
    script(src='/js/views.js')
    script(src='/js/routers.js')
    script(src='/js/shared.js')
    script(src='/js/client.js')
