!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.title
      link(rel='stylesheet', href='/assets/css/example.css')

  body
    .navbar.navbar-default
        .navbar-header
            a.navbar-brand(href='/')= locals.siteName

    div#main
      section#content
        block content
          - var progress= 0;
          h1.page-header Starting
            small please wait a moment
          .progress
            .progress-bar(role='progressbar', aria-valuenow='#{progress}', aria-valuemin='0', aria-valuemax='100', style="width: #{progress}%;")
              span.sr-only Complete

      section#sidebar
        block sidebar

    script(src='/js/vendor.js')
    script(src='/js/templates.js')
    script(src='/js/models.js')
    script(src='/js/views.js')
    script(src='/js/routers.js')
    script(src='/js/shared.js')
    script(src='/js/client.js')
